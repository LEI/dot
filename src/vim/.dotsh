#!/usr/bin/env bash

[[ "$state" == "install" ]] && directory "$state" "$HOME/.vim"

symlink "$state" --prefix "$prefix" --name .vimrc --path .vim/*

[[ "$state" == "remove" ]] && directory "$state" "$HOME/.vim"

_post_install() {
  if hash nvim 2>/dev/null \
    && [[ -d "$HOME/.vim" ]] \
    && [[ ! -d "$HOME/.config/nvim" ]]
  then
    mkdir -l $HOME/.config
    ln -s $HOME/.vim $HOME/.config/nvim
  fi
}
