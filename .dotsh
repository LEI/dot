#!/usr/bin/env bash

[[ "$state" == "install" ]] && directory "$state" "$HOME/.bash.d"

symlink "$state" --prefix "$prefix" \
  --path f:.bash* \
  --path .bash.d/* \
  --name .inputrc

[[ "$state" == "remove" ]] && directory "$state" "$HOME/.bash.d"

line_in_file "$state" "$HOME/.bashrc" \
  '[[ -n "$PS1" ]] && [[ -f ~/.bash_profile ]] && source ~/.bash_profile'
